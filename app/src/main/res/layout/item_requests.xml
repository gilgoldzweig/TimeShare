<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/_20sdp"
    android:paddingRight="@dimen/_20sdp"
    android:paddingBottom="@dimen/_10sdp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_100sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardElevation="@dimen/_4sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp">
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Gil Goldzweig created: "
                android:textSize="@dimen/_16ssp"
                android:layout_marginBottom="@dimen/_6sdp"/>
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help me clean the earth"
                android:textSize="@dimen/_16ssp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_6sdp"/>
            <TextView
                android:id="@+id/txt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help me clean the earth sdlkvnxdjnv slvojs ncljzd vlzcjzclzc ljzclojz cljzc lmzc lszjc ljszc ljs lsjladxlamclsc lsvlsladlnac lam lam LAMD ;KA LA D;KA;ADK ;KD;KAD;KDA ;AKD;;MAD KAF MAF;BK A DV;MA KSF;MB "
                android:textSize="@dimen/_14ssp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_12sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#000000"
                android:layout_marginBottom="@dimen/_4sdp"/>
            <TextView
                android:id="@+id/txt_skills_needed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cleaning, Coding, UI, UX, 3D Printing"
                android:textSize="@dimen/_14ssp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>